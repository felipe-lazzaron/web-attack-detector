{
    "manifest_version": 2,
    "name": "Detector de Ataques Web",
    "version": "1.0",
    "permissions": ["<all_urls>", "webRequest", "cookies"],
    "background": {
      "scripts": ["scripts/background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup/popup.html",
      "default_icon": "icons/icon.png"
    },
    "icons": {
      "48": "icons/icon.png"
    }
  }