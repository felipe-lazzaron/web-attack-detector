{
    "manifest_version": 2,
    "name": "Web Attack & Privacy Violation Detector",
    "version": "1.0",
    "description": "Detects potential security threats and privacy violations in web clients.",
    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },
    "permissions": [
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "cookies",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_popup": "popup.html"
    }
}
